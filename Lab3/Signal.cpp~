#include "Semaphore.h"
#include <iostream>
#include <thread>

int i = 0;

void task(std::shared_ptr<Semaphore> theSemaphore){
  theSemaphore->Wait();
  std::cout << i << " hello there" << std::endl;
  i++;
  theSemaphore->Signal();
}

int main(void){
  std::thread tOne, tTwo;
  std::shared_ptr<Semaphore> sem(new Semaphore);
  threadOne=std::thread(tOne, sem);
  threadTwo=std::thread(tTwo, sem);
  std::cout << "Launched from main\n";
  threadOne.join();
  threadTwo.join();
  return 0;
}
